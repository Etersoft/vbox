#!/bin/bash
# Etersoft, 2010
# 2010 (c) Devaev Maxim <mdevaev@etersoft.ru>
#
# VBoxShared - VirtualBox runner at special user
#
#####

. /etc/vbox/vbox.conf

XAUTHORITY=`mktemp -p /tmp --suffix .xauth`
cp ~/.Xauthority "$XAUTHORITY"
chmod 664 "$XAUTHORITY"
sudo su - "$VBOX_USER" -c "export DISPLAY=\"$DISPLAY\" XAUTHORITY=\"$XAUTHORITY\"; `which VirtualBox`"
rm -f "$XAUTHORITY"

